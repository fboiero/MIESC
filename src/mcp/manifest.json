{
  "agent_id": "miesc-agent-v3.0.0",
  "agent_name": "MIESC - Multi-layer Intelligent Evaluation for Smart Contracts",
  "version": "3.0.0",
  "protocol": "mcp/1.0",
  "description": "Automated security assessment framework for smart contracts. Provides multi-tool scanning, AI-powered correlation, and compliance mapping for Ethereum/Soroban contracts.",
  "author": "Fernando Boiero - Universidad de la Defensa Nacional (UNDEF)",
  "license": "GPL-3.0",
  "homepage": "https://github.com/fboiero/MIESC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fboiero/MIESC.git"
  },
  "capabilities": [
    {
      "name": "run_audit",
      "description": "Execute comprehensive multi-tool security audit",
      "category": "analysis",
      "input_schema": {
        "type": "object",
        "properties": {
          "contract_path": {
            "type": "string",
            "description": "Path to Solidity contract file"
          },
          "tools": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List of security tools to use",
            "default": ["slither", "mythril", "aderyn"]
          },
          "enable_ai_triage": {
            "type": "boolean",
            "description": "Enable AI-powered false positive reduction",
            "default": true
          }
        },
        "required": ["contract_path"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "findings": {"type": "array"},
          "metrics": {"type": "object"},
          "compliance": {"type": "object"}
        }
      }
    },
    {
      "name": "correlate_findings",
      "description": "Apply AI correlation to reduce false positives",
      "category": "correlation",
      "input_schema": {
        "type": "object",
        "properties": {
          "findings": {
            "type": "array",
            "description": "Raw vulnerability findings from security tools"
          },
          "contract_source": {
            "type": "string",
            "description": "Optional contract source code for context"
          }
        },
        "required": ["findings"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "correlated_findings": {"type": "array"},
          "reduction_rate": {"type": "number"}
        }
      }
    },
    {
      "name": "map_compliance",
      "description": "Map findings to international security standards",
      "category": "compliance",
      "input_schema": {
        "type": "object",
        "properties": {
          "findings": {
            "type": "array",
            "description": "Vulnerability findings to map"
          }
        },
        "required": ["findings"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "compliance_matrix": {"type": "object"},
          "compliance_score": {"type": "number"},
          "gaps": {"type": "array"}
        }
      }
    },
    {
      "name": "calculate_metrics",
      "description": "Calculate scientific validation metrics (precision, recall, F1, Cohen's κ)",
      "category": "metrics",
      "input_schema": {
        "type": "object",
        "properties": {
          "predictions": {
            "type": "array",
            "description": "Binary predictions (1=vulnerable, 0=safe)"
          },
          "ground_truth": {
            "type": "array",
            "description": "Ground truth labels"
          }
        },
        "required": ["predictions", "ground_truth"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "precision": {"type": "number"},
          "recall": {"type": "number"},
          "f1_score": {"type": "number"},
          "cohens_kappa": {"type": "number"}
        }
      }
    },
    {
      "name": "generate_report",
      "description": "Generate structured audit report",
      "category": "reporting",
      "input_schema": {
        "type": "object",
        "properties": {
          "audit_results": {"type": "object"},
          "format": {
            "type": "string",
            "enum": ["json", "html", "pdf"],
            "default": "json"
          }
        },
        "required": ["audit_results"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "report_path": {"type": "string"},
          "report_data": {"type": "object"}
        }
      }
    },
    {
      "name": "get_status",
      "description": "Get MIESC agent status and capabilities",
      "category": "management",
      "input_schema": {
        "type": "object",
        "properties": {}
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "agent_id": {"type": "string"},
          "status": {"type": "string"},
          "capabilities": {"type": "array"}
        }
      }
    }
  ],
  "context_types": [
    {
      "name": "miesc_scan_results",
      "description": "Raw scan results from multi-tool analysis"
    },
    {
      "name": "miesc_correlated_findings",
      "description": "AI-correlated findings with reduced false positives"
    },
    {
      "name": "miesc_compliance",
      "description": "Compliance mapping to international standards"
    },
    {
      "name": "miesc_finding",
      "description": "Individual security finding with full context"
    }
  ],
  "subscriptions": [
    "contract_deployed",
    "security_incident",
    "compliance_request",
    "audit_request"
  ],
  "endpoints": {
    "jsonrpc": "/mcp/jsonrpc",
    "websocket": "/mcp/ws",
    "rest": "/api/v1",
    "health": "/health"
  },
  "metadata": {
    "scientific_foundation": "Defense-in-depth (Saltzer & Schroeder, 1975), Multi-agent systems (Wooldridge & Jennings, 1995)",
    "compliance_standards": [
      "ISO/IEC 27001:2022",
      "ISO/IEC 42001:2023",
      "NIST Cybersecurity Framework",
      "OWASP Smart Contract Top 10",
      "CWE (Common Weakness Enumeration)",
      "SWC (Smart Contract Weakness)",
      "MITRE ATT&CK",
      "EU MiCA",
      "EU DORA"
    ],
    "thesis": {
      "title": "Integrated Security Assessment Framework for Smart Contracts: A Defense-in-Depth Approach to Cyberdefense",
      "institution": "Universidad de la Defensa Nacional (UNDEF) - IUA Córdoba",
      "program": "Master's Degree in Cyberdefense",
      "author": "Fernando Boiero",
      "year": 2025
    },
    "contact": {
      "email": "fboiero@frvm.utn.edu.ar",
      "github": "https://github.com/fboiero"
    },
    "validation": {
      "datasets": ["SmartBugs", "Etherscan Top 1000", "DeFi Protocol Suite"],
      "total_contracts_tested": 5127,
      "precision": 0.8947,
      "recall": 0.862,
      "f1_score": 0.8781,
      "cohens_kappa": 0.847
    }
  }
}
